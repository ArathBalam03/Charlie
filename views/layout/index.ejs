<!DOCTYPE html>
<html lang="es" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= title %></title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#38bdf8",
                        "background-dark": "#0d1117",
                        "card-dark": "#161b22",
                        "text-light": "#e6edf3",
                        "border-dark": "#30363d"
                    }
                }
            }
        };
    </script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>

<body class="bg-background-dark text-text-light font-display flex min-h-screen">

    <!-- SIDEBAR -->
    <aside class="fixed inset-y-0 left-0 w-64 md:flex bg-card-dark border-r border-border-dark flex flex-col h-screen">

        <!-- Logo -->
        <div class="flex h-16 items-center gap-3 px-6 border-b border-border-dark">
            <span class="material-symbols-outlined text-primary text-3xl">local_shipping</span>
            <h2 class="text-xl font-bold text-white">FleetMonitor</h2>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 flex flex-col gap-2 p-4 overflow-y-auto">

            <a href="/devices"
               class="flex items-center gap-3 rounded-lg px-3 py-2
               <%= active === 'devices' ? 'bg-primary/20 text-primary' : 'text-white/70 hover:text-white' %>">
                <span class="material-symbols-outlined text-xl">devices</span>
                <span>Dispositivos</span>
            </a>

            <a href="/incidents"
               class="flex items-center gap-3 rounded-lg px-3 py-2
               <%= active === 'incidents' ? 'bg-primary/20 text-primary' : 'text-white/70 hover:text-white' %>">
                <span class="material-symbols-outlined text-xl">warning</span>
                <span>Incidentes</span>
            </a>

            <a href="/journeys"
               class="flex items-center gap-3 rounded-lg px-3 py-2
               <%= active === 'journeys' ? 'bg-primary/20 text-primary' : 'text-white/70 hover:text-white' %>">
                <span class="material-symbols-outlined text-xl">commute</span>
                <span>Viajes</span>
            </a>

            <a href="/reports"
               class="flex items-center gap-3 rounded-lg px-3 py-2
               <%= active === 'reports' ? 'bg-primary/20 text-primary' : 'text-white/70 hover:text-white' %>">
                <span class="material-symbols-outlined text-xl">description</span>
                <span>Reports</span>
            </a>

            <a href="/roles"
               class="flex items-center gap-3 rounded-lg px-3 py-2
               <%= active === 'roles' ? 'bg-primary/20 text-primary' : 'text-white/70 hover:text-white' %>">
                <span class="material-symbols-outlined text-xl">manage_accounts</span>
                <span>Roles</span>
            </a>

            <a href="/vehicles"
               class="flex items-center gap-3 rounded-lg px-3 py-2
               <%= active === 'vehicles' ? 'bg-primary/20 text-primary' : 'text-white/70 hover:text-white' %>">
                <span class="material-symbols-outlined text-xl">directions_car</span>
                <span>Vehículos</span>
            </a>

        </nav>

        <!-- Logout -->
        <div class="p-4 border-t border-border-dark">
            <a href="/auth/login"
               class="flex items-center gap-3 px-3 py-2 rounded-lg text-white bg-red-600 hover:bg-red-500 transition-all">
                <span class="material-symbols-outlined text-xl">logout</span>
                <span>Cerrar sesión</span>
            </a>
        </div>

    </aside>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-4 md:p-8 grid grid-cols-12 gap-8 ml-0 md:ml-64">
        <%- body %>
    </main>

    <!-- Scripts -->
    <script src="/js/dashboard.js"></script>
    <script src="/js/reportes.js"></script>
    <script src="/js/operadores.js"></script>
    <script src="/js/configuracion.js"></script>

</body>
</html>
