<div class="col-span-12">

  <!-- PageHeading -->
  <div class="flex flex-wrap justify-between gap-3 mb-6">
    <div class="flex flex-col gap-1">
      <p class="text-black dark:text-white text-3xl font-bold leading-tight tracking-tight">Visualización de Reportes</p>
      <p class="text-gray-500 dark:text-[#9cb2ba] text-base font-normal leading-normal">Revise todos los incidentes reportados en el sistema.</p>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="bg-[#1b2427] p-4 rounded-xl mb-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- SearchBar -->
      <div class="col-span-1 md:col-span-1">
        <label class="flex flex-col min-w-40 h-12 w-full">
          <div class="flex w-full flex-1 items-stretch rounded-lg h-full">
            <div class="text-[#9cb2ba] flex border-none bg-[#283539] items-center justify-center pl-4 rounded-l-lg border-r-0">
              <span class="material-symbols-outlined">search</span>
            </div>
            <input class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-r-lg text-white focus:outline-0 focus:ring-0 border-none bg-[#283539] h-full placeholder:text-[#9cb2ba] px-4 text-base font-normal leading-normal"
              placeholder="Buscar por descripción..." value=""/>
          </div>
        </label>
      </div>

      <!-- Chips -->
      <div class="col-span-1 md:col-span-2 flex items-center gap-3">
        <button class="flex h-12 shrink-0 items-center justify-center gap-x-2 rounded-lg bg-[#283539] px-4 w-full md:w-auto">
          <p class="text-white text-sm font-medium leading-normal">Rango de Fechas</p>
          <span class="material-symbols-outlined text-white text-xl">expand_more</span>
        </button>
        <button class="flex h-12 shrink-0 items-center justify-center gap-x-2 rounded-lg bg-[#283539] px-4 w-full md:w-auto">
          <p class="text-white text-sm font-medium leading-normal">Tipo de Incidente</p>
          <span class="material-symbols-outlined text-white text-xl">expand_more</span>
        </button>
        <button class="flex h-12 shrink-0 items-center justify-center gap-x-2 rounded-lg bg-[#283539] px-4 w-full md:w-auto">
          <p class="text-white text-sm font-medium leading-normal">Vehículo</p>
          <span class="material-symbols-outlined text-white text-xl">expand_more</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="w-full @container">
    <div class="flex overflow-hidden rounded-xl border border-[#3b4e54] bg-[#111618]">
      <table class="w-full">
        <thead>
          <tr class="bg-[#1b2427]">
            <th class="px-4 py-3 text-left text-white w-2/12 text-sm font-medium leading-normal">ID del Reporte</th>
            <th class="px-4 py-3 text-left text-white w-3/12 text-sm font-medium leading-normal">Descripción</th>
            <th class="px-4 py-3 text-left text-white w-2/12 text-sm font-medium leading-normal">Ubicación</th>
            <th class="px-4 py-3 text-left text-white w-[150px] text-sm font-medium leading-normal">Fecha y Hora</th>
            <th class="px-4 py-3 text-left text-white w-[200px] text-sm font-medium leading-normal">Tipo de Incidente</th>
            <th class="px-4 py-3 text-left text-white w-1/12 text-sm font-medium leading-normal">Vehículo</th>
            <th class="px-4 py-3 text-left text-white w-1/12 text-sm font-medium leading-normal">Usuario</th>
            <th class="px-4 py-3 text-left text-white w-[120px] text-sm font-medium leading-normal">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% reports.forEach(report => { %>
            <tr class="border-t border-t-[#3b4e54]">
              <td class="px-4 py-2 text-[#9cb2ba] text-sm font-normal"><%= report.id %></td>
              <td class="px-4 py-2 text-white text-sm font-normal"><%= report.description %></td>
              <td class="px-4 py-2 text-[#9cb2ba] text-sm font-normal"><%= report.ubication %></td>
              <td class="px-4 py-2 text-[#9cb2ba] text-sm font-normal"><%= new Date(report.incident_timestamp).toLocaleString() %></td>
              <td class="px-4 py-2">
                <div class="flex items-center justify-start">
                  <span class="truncate text-center rounded-full h-7 px-3
                    <%= report.incident_type_id === 1 ? 'bg-red-500/20 text-red-300' : 
                        report.incident_type_id === 2 ? 'bg-yellow-500/20 text-yellow-300' : 'bg-blue-500/20 text-blue-300' %>
                    text-xs font-medium leading-normal inline-flex items-center">
                    <%= report.incident_type_id === 1 ? 'Accidente' : 
                        report.incident_type_id === 2 ? 'Falla Mecánica' : 'Otro' %>
                  </span>
                </div>
              </td>
              <td class="px-4 py-2 text-[#9cb2ba] text-sm font-normal"><%= report.vehicle_id %></td>
              <td class="px-4 py-2 text-[#9cb2ba] text-sm font-normal"><%= report.user_id %></td>
              <td class="px-4 py-2">
                <button class="text-primary text-sm font-bold leading-normal tracking-[0.015em] hover:underline">Ver Detalles</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</div>
