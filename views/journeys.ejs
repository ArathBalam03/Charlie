<div class="col-span-12">
  <main class="flex-1 p-8 grid grid-cols-1 xl:grid-cols-3 gap-8">
    <div class="xl:col-span-2 flex flex-col gap-8">

      <!-- Page Heading -->
      <header class="flex flex-wrap justify-between items-center gap-4">
        <div class="flex flex-col gap-2">
          <h1 class="text-white text-4xl font-black leading-tight tracking-[-0.033em]">Dashboard de Viajes y Dispositivos</h1>
          <p class="text-[#9cb2ba] text-base font-normal leading-normal">Visualizaci√≥n en tiempo real de dispositivos y viajes de la flota.</p>
        </div>
      </header>

      <!-- Devices Section -->
      <section>
        <h2 class="text-white text-[22px] font-bold leading-tight tracking-[-0.015em] mb-4">Dispositivos Activos</h2>
        <div class="grid grid-cols-[repeat(auto-fit,minmax(200px,1fr))] gap-4">
          <% if (devices && devices.length > 0) { %>
            <% devices.forEach(device => { %>
              <div class="flex flex-col gap-3 p-4 bg-[#1a292d] rounded-xl border border-white/10 cursor-pointer hover:border-primary/50 transition-colors">
                <div class="flex justify-between items-start">
                  <div class="flex flex-col">
                    <p class="text-white text-base font-medium leading-normal"><%= device.key_identification || device.name || 'N/A' %></p>
                    <p class="text-[#9cb2ba] text-sm font-normal leading-normal">Vehicle: <%= device.vehicle_id || device.vehicleId || 'N/A' %></p>
                  </div>
                  <div class="flex items-center gap-1.5 <%= device.first_activation ? 'bg-green-500/10 text-green-400' : 'bg-gray-500/10 text-gray-400' %> px-2 py-1 rounded-full">
                    <span class="w-1.5 h-1.5 rounded-full <%= device.first_activation ? 'bg-green-400' : 'bg-gray-400' %>"></span>
                    <p class="text-xs font-medium"><%= device.first_activation ? 'Online' : 'Offline' %></p>
                  </div>
                </div>
                <p class="text-[#9cb2ba] text-xs font-mono">ID: <%= device.id %></p>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-gray-400">No hay dispositivos para mostrar.</p>
          <% } %>
        </div>
      </section>

      <!-- Trips Section -->
      <section>
        <h2 class="text-white text-[22px] font-bold leading-tight tracking-[-0.015em] mb-4">Viajes Recientes</h2>
        <div class="flex flex-col bg-[#1a292d] rounded-xl border border-white/10 overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
              <thead class="text-xs text-[#9cb2ba] uppercase border-b border-white/10">
                <tr>
                  <th class="px-6 py-3" scope="col">Trip ID</th>
                  <th class="px-6 py-3" scope="col">Origen</th>
                  <th class="px-6 py-3" scope="col">Destino</th>
                </tr>
              </thead>
              <tbody>
                <% if (journeys && journeys.length > 0) { %>
                  <% journeys.forEach(journey => { %>
                    <tr class="border-b border-white/10 hover:bg-white/5 cursor-pointer">
                      <td class="px-6 py-4 font-mono text-white">TRP-<%= journey.id %></td>
                      <td class="px-6 py-4 text-white"><%= journey.starting_point || 'N/A' %></td>
                      <td class="px-6 py-4 text-white"><%= journey.arrival_point || 'N/A' %></td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td class="px-6 py-4 text-white" colspan="3">No hay viajes para mostrar.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </section>

    </div>
  </main>
</div>
